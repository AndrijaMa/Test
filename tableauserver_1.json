{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { 

        "adminUsername": {
                            "type": "string",
                            "defaultValue": "cloudadmin",
                            "metadata": {
                            "description": "Username for the Virtual Machine."
            }
        },

        "adminPassword": {
                            "type": "securestring",
                            "defaultValue": "Okkfr23456789",
                            "metadata": {
                            "description": "Password for the Virtual Machine."
            }
        },

        "TSMAdmin": {
                        "type": "string",
                        "defaultValue": "tsmadmin",
                        "metadata": {
                        "description": "Username for the TSM Administrator."
            }
        },

        "TSMPassword": {
                            "type": "securestring",
                            "defaultValue": "Okkfr23456789",
                            "metadata": {
                            "description": "Password for the TSM user."
            }
        },

        "dnsLabelPrefix": {
                            "type": "string",
                            "defaultValue": "dnshelpme",
                            "metadata": {
                            "description": "Unique DNS Name for the Public IP used to access the Virtual Machine."
            }
        },

        "vmName": {
                    "type": "string",
                    "defaultValue": "myvmtestname001"  
        },
        "virtualNetworkName": {  
                        "type": "string",
                        "defaultValue": "VNET_x"
        },
        "nicPrivateIPAddress": {  
                        "type": "string",
                        "defaultValue": "10.0.0.10"
        },
        "subnetName": {  
                        "type": "string",
                        "defaultValue": "Subnet-1"
        },
        "subnetPrefix": {  
                            "type": "string",
                            "defaultValue": "10.0.0.0/24"
        },
        "addressPrefix": {  
                            "type": "string",
                            "defaultValue": "10.0.0.0/16"
        },
        "addPublicIPAddress": {
                                "type": "string",
                                "defaultValue": "No",
                                "allowedValues": [
                                    "Yes",
                                    "No"
                                ],
                                "metadata": {
                                    "description": "Specify if each VM should have a public IP and be reachable from Internet."
                                }
        },
        "nsgVNetName":{  
                            "type": "string",
                            "defaultValue": "NSG-VNet"
        },
        "windowsOSVersion": {
                                "type": "string",
                                "defaultValue": "2016-Datacenter",
                                "allowedValues": [
                                                    "2012-Datacenter",
                                                    "2012-R2-Datacenter",
                                                    "2016-Datacenter",
                                                    "2019-Datacenter"
                                ],
                                "metadata": {
                                    "description": "The Windows version for the VM."
                                }
        },
        "vmSize": {
                    "type": "string",
                    "defaultValue": "Standard_D4_v2",
                    "allowedValues": [
                                        "Standard_D4_v2",
                                        "Standard_D14_v2",
                                        "Standard_DS5_v2",
                                        "Standard_DS14-4_v2",
                                        "Standard_DS14-8_v2",
                                        "Standard_DS14_v2",
                                        "Standard_D16_v3",
                                        "Standard_D16s_v3",
                                        "Standard_E16_v3",
                                        "Standard_E16-4s_v3",
                                        "Standard_E16-8s_v3",
                                        "Standard_F16",
                                        "Standard_F16s"
                    ],
                    "metadata": {
                        "description": "Select the size of the virtual machine."
                    }
        },
        "domainFQDN": {
                        "type": "string",
                        "defaultValue": "contoso.local",
                        "minLength": 5,
                        "metadata": {
                                        "description": "FQDN of the AD forest to create"
                        }
      },
        "location": {
            "type": "string",
            "defaultValue": "West Europe",
            "allowedValues": [
                                "West Europe",
                                "North Europe",
                                "UK South"
            ],
            "metadata": {
                "description": "Select the Azure region that you want to deploy your Tableau Server to."
            }
        },
        "StorageSKU": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                                "Standard_LRS",
                                "Premium_LRS"
            ],
            "metadata": {
                "description": "Select type of storage."
            }
        },
        "BootDiagnostic":{
            "type": "bool",
            "defaultValue": false
        },
        "autoUpdates":{
            "type": "bool",
            "defaultValue": false
        },
        "timeZone":{
            "type": "string",
            "defaultValue": "W. Europe Standard Time",
            "allowedValues": [
                                "Pacific Standard Time",
                                "Mountain Standard Time",
                                "Central Standard Time",
                                "Eastern Standard Time",
                                "GMT Standard Time",
                                "Central European Time",
                                "W. Europe Standard Time",
                                "FLE Standard Time"
            ]
        }
        

    },
    "variables": {  
        "networkSettings":{
                            "nicName": "[concat('NIC-',toUpper(parameters('vmName')), '-0')]",
                            "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]",
                            "nsgVNetName": "[parameters('nsgVNetName')]",
                            "nsgRuleAllowRdpPort": [
                                                        {
                                                            "name": "allow-rdp-rule",
                                                            "properties": {
                                                                            "description": "Allow RDP",
                                                                            "protocol": "Tcp",
                                                                            "sourcePortRange": "*",
                                                                            "destinationPortRange": "3389",
                                                                            "sourceAddressPrefix": "Internet",
                                                                            "destinationAddressPrefix": "*",
                                                                            "access": "Allow",
                                                                            "priority": 100,
                                                                            "direction": "Inbound"
                                                            }
                                                        }
                                                    ]
        },
        "VM":{
                "vmName": "[toUpper(parameters('vmName'))]",
                "vmPublicIPName": "[concat('PublicIP-', parameters('vmName'))]",
                "vmPublicIPDnsName": "[toLower(replace(concat(parameters('dnsLabelPrefix'), '-', parameters('vmName')), '_', '-'))]"
        }
    },
    "functions": [  ],
    "resources": [ 
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('VM').vmName]",
            "location": "[parameters('location')]",
            "apiVersion": "2018-06-01",
            "dependsOn": [
                            "[resourceId('Microsoft.Network/networkInterfaces', variables('networkSettings').nicName)]"
            ],
            "properties": {
                                "hardwareProfile": {
                                                        "vmSize": "[parameters('vmSize')]"
                                },
                                "osProfile": {
                                                "computerName": "[variables('VM').vmName]",
                                                "adminUsername": "[parameters('adminUsername')]",
                                                "adminPassword": "[parameters('adminPassword')]",
                                                "windowsConfiguration": {
                                                                            "enableAutomaticUpdates": "[parameters('autoUpdates')]",
                                                                            "timeZone": "[parameters('timeZone')]",
                                                                            "provisionVMAgent": true
                                                }
                                },
                                "storageProfile": {
                                                    "imageReference": {
                                                                        "publisher": "MicrosoftWindowsServer",
                                                                        "offer": "WindowsServer",
                                                                        "sku": "[parameters('windowsOSVersion')]",
                                                                        "version": "latest"
                                                    },
                                                    "osDisk": {
                                                                "name": "disk01",
                                                                "caching": "ReadWrite",
                                                                "osType": "Windows",
                                                                "createOption": "FromImage",
                                                                "diskSizeGB": 1024,
                                                                "managedDisk": {
                                                                                    "storageAccountType": "[parameters('StorageSKU')]"
                                                                }
                                                    
                                                    }
                                },
                                "networkProfile": {
                                                    "networkInterfaces": [
                                                                            {
                                                                                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkSettings').nicName)]"
                                                                            }
                                                    ]
                                }
                            }
                        
                    },
                    
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-07-01",
            "name": "[variables('networkSettings').nicName]",
            "location": "[parameters('location')]",
            "dependsOn": [
                            "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                            "[resourceId('Microsoft.Network/publicIPAddresses', variables('VM').vmPublicIPName)]"
            ],
            "properties": {
                        "ipConfigurations": [
                                                {
                                                    "name": "ipconfig1",
                                                    "properties": {
                                                                    "privateIPAllocationMethod": "Dynamic",
                                                                    "subnet":   {
                                                                                    "id": "[variables('networkSettings').subnetRef]"
                                                                    },
                                                                    "publicIPAddress": {
                                                                                            "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('VM').vmPublicIPName)]"
                                                                    }
                                                                    
                                                                }
                                                }
                                            ]
                        }
            },
        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('networkSettings').nsgVNetName]",
            "location": "[parameters('location')]",
            "tags": {
                        "displayName": "[variables('networkSettings').nsgVNetName]"
            },
            "properties": {
                            "securityRules": "[if(equals(parameters('addPublicIPAddress'), 'Yes'), variables('networkSettings').nsgRuleAllowRdpPort, json('null'))]"
            }
        },
        
        {
            "type": "Microsoft.Network/virtualNetworks",  
            "apiVersion": "2019-07-01",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                            "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSettings').nsgVNetName)]"
            ],
            "properties": {
                            "addressSpace": {
                                                "addressPrefixes": [
                                                                        "[parameters('addressPrefix')]"
                                                ]
                            },
            "subnets": [
                        {
                            "name": "[parameters('subnetName')]",
                            "properties": {
                                                "addressPrefix": "[parameters('subnetPrefix')]"
                            }
            }
            ]
        }
        
        },
        {
            "condition": "[equals(parameters('addPublicIPAddress'), 'Yes')]",
            "name": "[variables('VM').vmPublicIPName]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[parameters('location')]",
            "apiVersion": "2019-06-01",
            "tags": {
                        "displayName": "[variables('VM').vmPublicIPName]"
            },
            "sku": {
                        "name": "Basic",
                        "tier": "Regional"
            },
            "properties": {
                            "publicIPAllocationMethod": "Dynamic",
                            "dnsSettings": {
                                                "domainNameLabel": "[variables('VM').vmPublicIPDnsName]"
                            }
            }
        }
     ],
    "outputs": {  }
}